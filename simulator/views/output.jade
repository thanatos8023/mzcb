doctype html
html
	head
		meta(charset='utf-8')
		title User utterance and response viewer
		link(href="https://fonts.googleapis.com/css?family=Nanum+Gothic|Raleway" rel="stylesheet")
		link(rel="stylesheet" href="/css/reset.css")
		link(rel="stylesheet" href="/css/style.css")
	body
		div#wrap
			div.wrap-left
				div._title
					h1 Chatbot Simulator
				div.sub
					ul
					each menu in menuList
						ul
						label= menu[0]
						each sub in menu[1]
							li
								a(href='/mode/?domain=#{menu[0]}&subdomain=#{sub}')= sub
			div.wrap-right
				div.gnb
					a(href="/mode?domain=#{nowPage[0]}&subdomain=#{nowPage[1]}") Manage Input
					a(href="/response?domain=#{nowPage[0]}&subdomain=#{nowPage[1]}" class="on") Manage Response
					a(href="/rule?domain=#{nowPage[0]}&subdomain=#{nowPage[1]}") Manage Rule
				form(action='/updateres/?domain=#{nowPage[0]}&subdomain=#{nowPage[1]}' method='post' id='updateresform')
					div._contents
						div.box
							div(class="_top text-right")
								button(type="submit" class="button mint" form="updateresform") 수정
									i.icon-modify
									
							div(class="basic-table type02")
								table
									caption manage Response table
									thead
										tr
											th(scope="col") Text
									tbody
										tr
											td
												textarea(name="newText", id="newText")= resText
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js")
		script(src="js/func.js")